{
  "name": "the-music-place",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "echo 'No build step needed'",
    "dev": "bun run --hot server/index.ts",
    "start": "bun run server/index.ts",
    "typecheck": "bunx tsc --project tsconfig.ci.json --noEmit",
    "test:bot": "bun run test/bot.ts",
    "test:curl": "bash test/curl-test.sh",
    "test:smoke": "bash test/ci-smoke.sh",
    "test:stress": "bun run test/llm-stress-test.ts",
    "ci:verify": "bun run typecheck && bun run test:smoke"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.2.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "hono": "^4.11.9"
  }
}
